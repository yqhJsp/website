/* pages/mall/index/index.wxss */
 @import '../template/template.wxss';
/*banner图*/

page {
        background-color: #f5f5f5;
}

.section {
margin-bottom:60rpx
}

.view_banner {
   height:320rpx;  
}

.view_banner image {
  margin: 0;
  border: 0;
  height:100%;  
  width: 100%;
}
/*地址*/
.view_address{
 display: flex;
 flex-direction: row;
 align-items: center;
 background-color:#fff;
 padding:20rpx 40rpx;
 border-bottom:20rpx solid #f5f5f5
}
.logo{
width:41rpx;
padding-right:30rpx 
}
.logo image{
width:41rpx;
height:48rpx; 
}
.address-row{
width:80%;
font-size:24rpx;
padding-right:20rpx
}
.shopName{
 font-size:28rpx;
 color:#333
}
.addressName{
  font-size:22rpx;
 color:#999;
 margin-top:5rpx
}
.map-row{
width: 42rpx;
padding-left:30rpx;
text-align: right;
padding-top:10rpx;
border-left:1rpx solid #ccc;
}
.map-row image{
width: 42rpx;
height:42rpx;
}
.gophone{
  font-size:24rpx;
  padding:10rpx 20rpx;
  border:#ccc solid 1rpx;
  border-radius:32rpx
}

/*栏目*/
.view-table-view {
        position: relative;
        border-bottom: 0;
        background-color: #f5f5f5;
}

.view-table-view .nav-list {
  /* border-bottom:15rpx #f5f5f5 solid; */
  background-color: #fff;

}
.border{
  height: 20rpx;
  width:100%;
  background-color: #f5f5f5
}
.view-list-title,.view-list-title2{
        width: 85%;
        margin: 0 auto;
        padding: 30rpx 30rpx 10rpx 0;
        font-size: 30rpx;
}
.view-list-title{
    text-align: left; 
     border-bottom: 1rpx solid #dedede;    
}
.view-list-title2{
    text-align: center; 
}
.clumname {
        font-size: 24rpx;
        color: #999;
        margin-left: 10rpx;
        text-transform: capitalize;
}

.columnIcon {
        width: 40rpx;
        height: 40rpx;
        vertical-align: -5rpx;
        margin-right: 10rpx;
}

.view-table-view .nav-list .view-mall {
        margin:0 20rpx 0 20rpx;
        position: relative;
        padding:10rpx 0;
}
.notices {
        overflow: hidden;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
}
.app-info{
  text-align:center;
  margin:20rpx 0;
  padding-top: 50rpx;
  height:180rpx
}
.app-info .give-phone,.app-info .goxun{
    width:440rpx;
    /* padding:20rpx 0; */
     height: 74rpx;
     line-height: 74rpx; 
    display:inline-block;
    text-align: center;
    border-radius:64rpx;
    margin-top:20rpx;
    font-size:26rpx
}
.app-info .give-phone{
   border:1rpx solid #ccc;
    color:#333;
    background-color:#fff;
}
.app-info .goxun{
    color:#fff;
    background:red;
}